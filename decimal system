#include<stdio.h>
int main()
{
    while(1)
    {
        int N;
        printf("Select a option : \n 1.Addition \n 2.Multiplication \n 3.Exit \n");
        printf("Enter a option : ");
        scanf("%d",&N);
        if(N==1)
        {
            long long int m,n;
            printf("Enter two decimal numbers: ");
            scanf("%lld %lld", &m,&n);
            long long int sum=m+n;
            printf("Sum is: %lld \n",sum);
        }
        else if(N==2)
        {
            long long int m,n;
            printf("Enter two decimal numbers: ");
            scanf("%lld %lld",&m,&n);
            printf("Product is: %lld \n",m*n);
        }
        else
        {
            printf("Exited.");
            break;
        }
    }
    return 0;
}
